{
  "name": "cleantsapi",
  "version": "1.0.0",
  "description": "Clean, automated scaffolding of a new typescript + node.js Web APi in seconds",
  "main": "dist/api.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon",
    "build": "tsx build.ts",
    "start": "node dist/api.js",
    "clean": "rm -rf dist",
    "lint": "eslint 'src/**/*.{ts,js}'",
    "format": "prettier --write 'src/**/*.{ts,js,json}'"
  },
  "author": "Michael Lowenstein",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^6.1.1",
    "@types/node": "^22.15.9",
    "esbuild": "^0.25.3",
    "esbuild-node-externals": "^1.18.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "fs": "^0.0.1-security",
    "fs-p": "^2.0.0",
    "http": "^0.0.1-security",
    "https": "^1.0.0"
  }

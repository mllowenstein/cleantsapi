{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "moduleDetection": "force",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@common/*": ["src/common/*"],
      "@utils/*": ["src/utils/*"]
    },
    "outDir": "dist",
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "build.ts"]
}
